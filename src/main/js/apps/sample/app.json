{
    "properties": {
        "title": "${apptitle}"
    },
    "load": {
        "bundleLocations": [
            "localbundles",
            "bundles"
        ],
        "allowedBundles": [
            "system",
            "console",
            "notifier",
            "splashscreen",
            "templatelayout",
            "template-seasons",
            "theme-everlasting",
            "theme-winter",
            "theme-spring",
            "theme-summer",
            "theme-autumn",
            "portal-webitem-map",
            "map-preload-3D",
            "toolset",
            "toolrules",
            "banner",
            "basemaptoggler",
            "custominfo",
            "mapnavigation",
            "scalebar",
            "locateme",
            "share-link",
            "omnisearch",
            "locator-store",
            "popups-default",
            "dn_slice"
        ],
        "require": [
            "${app}.app"
        ],
        "i18n": [
            "bundle"
        ]
    },
    "bundles": {
        "banner": {
            "BannerWidget": {
                "label": "Developer Network",
                "imagePosition": "above",
                "image": "resource('${app}:/images/logo_conterra.png')",
                "imageWidth": 200,
                "link": "https://developernetwork.conterra.de"
            }
        },
        "portal-webitem-map": {
            "Config": {
                "portalItem": {
                    "id": "8a6b6626670b4720ac067dc432e7a5fb",
                    "portal": "https://www.arcgis.com"
                }
            }
        },
        "basemaptoggler": {
            "Config": {
                "nextBasemap": "hybrid"
            }
        },
        "custominfo": {
            "CustomInfoToggleTool": [
                {
                    "widgetSettings": {
                        "content": "${info}",
                        "window": {
                            "marginBox": {
                                "w": 320,
                                "h": 500
                            },
                            "draggable": true,
                            "closable": true,
                            "modal": true,
                            "maximizable": false,
                            "resizable": true,
                            "title": "Info"
                        }
                    },
                    "type": "IMPRINT",
                    "toolClass": "ctInfo",
                    "title": "Info",
                    "tooltip": "Zeige Info",
                    "tooltipPositions": [
                        "after",
                        "above",
                        "below",
                        "before"
                    ],
                    "iconClass": "icon-custom-info-imprint",
                    "togglable": true,
                    "id": "IMPRINT_Imprint_CustomInfoTool"
                }
            ]
        },
        "themes": {
            "ThemeModel": {
                "_selectedTheme": "everlasting"
            },
            "ThemeSelector": {
                "componentEnabled": true
            }
        },
        "templates": {
            "TemplateModel": {
                "_templates": [
                    {
                        "name": "seasons",
                        "widgets": [
                            {
                                "widgetRole": "drawer_button",
                                "attachTo": "map_topleft",
                                "props": {
                                    "layoutIndex": 0
                                }
                            },
                            {
                                "widgetRole": "sharelink",
                                "window": {
                                    "dockable": false,
                                    "dockingBar": null
                                }
                            },
                            {
                                "widgetRole": "legend",
                                "sublayout": [
                                    "mobile_portrait",
                                    "mobile_landscape"
                                ],
                                "window": {
                                    "dockable": false,
                                    "dockingBar": null
                                }
                            },
                            {
                                "widgetRole": "banner",
                                "sublayout": [
                                    "mobile_portrait"
                                ],
                                "attachTo": "footer_right"
                            }
                        ]
                    }
                ]
            }
        },
        "toolset": {
            "ToolsetManager": {
                "toolsets": [
                    {
                        "id": "mapview_tools",
                        "tools": [
                            "locateMeTool",
                            "zoomInTool",
                            "zoomOutTool",
                            "compassTool",
                            "restoreInitialViewTool"
                        ],
                        "registerWidget": {
                            "widgetRole": "mapview_tools"
                        },
                        "container": "ignore",
                        "windowType": "container",
                        "cssClass": "muted"
                    },
                    {
                        "id": "drawer_left",
                        "title": "Werkzeuge",
                        "cssClass": "ct-main-app-menu",
                        "tools": [
                            "sharelinkTool",
                            "sliceToggleTool",
                            "IMPRINT_Imprint_CustomInfoTool",
                            "IMPRINT_Imprint_CustomInfoTool_mobile"
                        ],
                        "registerWidget": {
                            "widgetRole": "drawer_button"
                        },
                        "container": "ignore",
                        "windowType": "drawer_left"
                    }
                ]
            }
        },
        "toolrules": {
            "ToolActiveStateManager": {
                "activateOnStartToolIds": [
                    "sliceToggleTool"
                ]
            }
        }
    }
}
