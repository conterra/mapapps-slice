{
    "name": "dn_slice",
    "version": "1.0.2-SNAPSHOT",
    "title": "${bundleName}",
    "description": "${bundleDescription}",
    "vendor": "con terra GmbH",
    "productName": "devnet-mapapps-slice",
    "layer": "module",
    "i18n": [
        "bundle"
    ],
    "CSS-Themes-Extension": [
        {
            "name": "*",
            "files": [
                "./css/styles.css"
            ]
        }
    ],
    "layout-widgets": [
        {
            "widgetRole": "sliceWidget",
            "template": "seasons",
            "sublayout": [
                "desktop",
                "tablet_landscape",
                "tablet_portrait"
            ],
            "window": {
                "autofocus": false,
                "dockTool": "sliceToggleTool",
                "minimizeOnClose": true,
                "resizable": true,
                "marginBox": {
                    "h": 500,
                    "w": 400,
                    "b": 55,
                    "l": 20
                },
                "minSize": {
                    "h": 500,
                    "w": 400
                },
                "windowClass": "slice-window"
            }
        },
        {
            "widgetRole": "sliceWidget",
            "template": "seasons",
            "sublayout": [
                "mobile_landscape",
                "mobile_portrait"
            ],
            "window": {
                "autofocus": false,
                "dockTool": "sliceToggleTool",
                "minimizeOnClose": true,
                "resizable": false,
                "marginBox": {
                    "w": "100%",
                    "h": "20%",
                    "b": 40,
                    "l": 0
                },
                "windowClass": "mobileWindow slice-window"
            }
        }
    ],
    "components": [
        {
            "name": "SliceToggleTool",
            "impl": "ct/tools/Tool",
            "provides": [
                "ct.tools.Tool"
            ],
            "propertiesConstructor": true,
            "properties": {
                "id": "sliceToggleTool",
                "title": "${widget.title}",
                "tooltip": "${widget.tooltip}",
                "toolRole": "toolset",
                "iconClass": "icon-custom-info-imprint",
                "togglable": true,
                "rules": {
                    "noGroup": true,
                    "viewmode": "3D",
                    "ruleSuccessProperty": "visibility"
                }
            }
        },
        {
            "name": "Config",
            "impl": "./SliceWidgetFactory",
            "provides": [
                "dijit.Widget",
                "dn_slice.SliceWidgetFactory"
            ],
            "instanceFactory": true,
            "properties": {
                "widgetRole": "sliceWidget"
            },
            "references": [
                {
                    "name": "_mapWidgetModel",
                    "providing": "map-widget.MapWidgetModel"
                },
                {
                    "name": "_tool",
                    "providing": "ct.tools.Tool",
                    "filter": "(id=sliceToggleTool)"
                }
            ]
        }
    ]
}

